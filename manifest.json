{
  "manifest_version": 2,
  "name"            : "EasyFill",
  "version"         : "1.0.0",
  "description"     : "Convert text into commands for easy workflow",
  "browser_action": {
    "default_popup" : "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    { "matches": [
      "http://*/*",
      "https://*/*"
  ],
  "js": ["content.js"]
}
  ]
}